<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="popupMenuStyle">@style/PopupMenuTheme</item>
        <item name="textAppearanceLargePopupMenu">@style/MyMaterialPrimaryBody1</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:navigationBarColor">@color/primary</item>

        <item name="alertDialogTheme">@style/MyDialog</item>
        <item name="dialogTheme">@style/MyDialog</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <style name="MyDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="buttonBarNegativeButtonStyle">@style/MyMaterialTextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyMaterialButton</item>
        <!--buttons color-->
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="textColorAlertDialogListItem">@color/primary_text</item>
        <item name="android:textColorAlertDialogListItem">@color/primary_text</item>

        <!--title and message color-->
        <item name="android:textColorPrimary">@color/primary_text</item>

        <!--dialog background-->
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="PopupToolbarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="PopupMenuTheme" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownHorizontalOffset">4dp</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="ProgressDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="android:elevation">8dp</item>
        <item name="popupTheme">@style/PopupToolbarTheme</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="MyMaterialHeadline1" parent="TextAppearance.MaterialComponents.Headline1" tools:ignore="UnusedResources">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialHeadline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialHeadline3" parent="TextAppearance.MaterialComponents.Headline3" tools:ignore="UnusedResources">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialHeadline4" parent="TextAppearance.MaterialComponents.Headline4" tools:ignore="UnusedResources">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialSecondarySubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1" tools:ignore="UnusedResources">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialPrimaryBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialBody1" parent="TextAppearance.MaterialComponents.Body1" tools:ignore="UnusedResources">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="MyMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyMaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyMaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">@dimen/cornerRadius</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

</resources>
